{% block body %}
<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">Crear nuevo post</h2>
        <a href="{{ path('posts_mis') }}" class="btn btn-secondary btn-lg">Volver</a>
    </div>

    <div class="card shadow-lg rounded-4 p-4 mx-auto" style="max-width: 700px;">
        <form action="{{ path('posts_create') }}" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label">TÃ­tulo</label>
                <input name="titulo" class="form-control" required>
            </div>

            <div class="mb-3">
                <label class="form-label">Contenido</label>
                <textarea name="contenido" class="form-control" rows="6" required></textarea>
            </div>

            <div class="mb-3">
