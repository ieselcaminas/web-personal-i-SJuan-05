{% extends 'base.html.twig' %}

{% block body %}
<div class="container py-5">
    <h1 class="mb-4 text-center text-primary display-4">Todos los Posts</h1>

    <div class="row row-cols-1 row-cols-md-2 g-4">
        {% for post in posts %}
            <div class="col">
                <div class="card h-100 shadow-lg border-0 rounded-4 overflow-hidden">
                    {% if post.imagen %}
                        <img src="{{ asset(post.imagen) }}" class="card-img-top" style="height:250px; object-fit:cover;">
                    {% endif %}
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">{{ post.titulo }}</h5>
                        <p class="card-text">{{ post.contenido|slice(0, 200) }}{% if post.contenido|length > 200 %}...{% endif %}</p>

                        <div class="mt-auto">
                            <small class="text-muted d-block mb-1">
                                Publicado el {{ post.createdAt ? post.createdAt|date('d/m/Y H:i') : 'Fecha desconocida' }}
                            </small>
                            <small class="text-muted d-block mb-2">
                                Autor: <strong>{{ post.user.name }}</strong>
                            </small>

                            <div class="d-flex flex-wrap gap-2">
                                <a href="{{ path('posts_edit', {id: post.id}) }}" class="btn btn-warning btn-sm">
                                    Editar
                                </a>

                                <form method="post" action="{{ path('posts_delete', {id: post.id}) }}" 
                                      onsubmit="return confirm('¿Seguro que deseas eliminar este post?')" 
                                      style="display:inline;">
                                    <button class="btn btn-danger btn-sm">Eliminar</button>
                                </form>

                                <a href="{{ path('posts_comments', {id: post.id}) }}" class="btn btn-info btn-sm">
                                    Ver comentarios
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="alert alert-info text-center">No hay posts disponibles.</div>
        {% endfor %}
    </div>

    <div class="mt-4 text-center">
        {% if app.user %}
            <a href="{{ path('posts_create') }}" class="btn btn-success btn-lg">
                Nueva publicación
            </a>
        {% else %}
            <a href="{{ path('login') }}" class="btn btn-outline-success btn-lg">
                Inicia sesión para publicar
            </a>
        {% endif %}
    </div>
</div>
{% endblock %}

