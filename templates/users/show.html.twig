{% extends 'base.html.twig' %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow-lg rounded-4 p-4">
                <h2 class="mb-4 text-center text-primary">Perfil de {{ user.name }}</h2>

                <p class="mb-2"><strong>Nombre:</strong> {{ user.name }}</p>
                <p class="mb-2"><strong>Email:</strong> {{ user.email }}</p>
                <p class="mb-3"><strong>Roles:</strong> {{ user.roles|join(', ') }}</p>

                <div class="d-flex justify-content-between mt-4">
                    {% if app.user and app.user.id == user.id %}
                        <a href="{{ path('users_edit', {id: user.id}) }}" class="btn btn-warning btn-lg">Editar perfil</a>
                    {% endif %}
                    <a href="{{ path('users_index') }}" class="btn btn-secondary btn-lg">Volver a la lista</a>
                </div>
            </div>

        </div>
    </div>
</div>
{% endblock %}
