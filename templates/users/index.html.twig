{% extends 'base.html.twig' %}

{% block body %}
<div class="container py-5">
    <h1 class="mb-4 text-primary text-center">Todos los Usuarios</h1>

    {% if users is not empty %}
        {% for user in users %}
            <div class="card shadow-lg rounded-4 mb-4">
                <div class="card-body">
                    <h4 class="card-title">{{ user.name }}</h4>
                    <p class="mb-1"><strong>Email:</strong> {{ user.email }}</p>
                    <p class="mb-3"><strong>Rol:</strong> {{ user.roles|join(', ') }}</p>
                    <a href="{{ path('users_show', {id: user.id}) }}" class="btn btn-info btn-sm">Ver perfil</a>
                </div>
            </div>
        {% endfor %}
    {% else %}
        <div class="alert alert-info text-center">No hay usuarios disponibles.</div>
    {% endif %}
</div>
{% endblock %}
